<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Hopefully this won't be needed in a future version of the library,
         for now have to set the colors this way -->
    <style name="BaseWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseWelcomeScreenTheme.Light" parent="WelcomeScreenTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Animated indicators -->
    <style name="WelcomeScreenPageIndicator.Animated">
        <item name="animated">true</item>
    </style>

    <style name="WelcomeScreenPageIndicator.Light.Animated">
        <item name="animated">true</item>
    </style>

    <!-- Styles for SampleWelcomeActivity -->
    <style name="SampleWelcomeScreenTheme" parent="BaseWelcomeScreenTheme">
        <item name="welcomeIndicatorStyle">@style/WelcomeScreenPageIndicator.Animated</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
    </style>


    <!-- Styles for LightWelcomeActivity -->
    <style name="LightWelcomeScreenTheme" parent="BaseWelcomeScreenTheme.Light">
        <item name="welcomeIndicatorStyle">@style/LightWelcomeIndicator</item>
        <item name="welcomeTitleTextStyle">@style/WelcomeScreenText.Title.Centered</item>
        <item name="android:textColorPrimary">@color/blue_background</item>
        <item name="android:textColorSecondary">#666</item>
    </style>

    <style name="LightWelcomeIndicator" parent="WelcomeScreenPageIndicator.Light.Animated">
        <item name="currentPageColor">@color/blue_background</item>
    </style>


</resources>
