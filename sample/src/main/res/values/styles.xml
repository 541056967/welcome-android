<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme">
        <item name="welcomeIndicatorStyle">@style/CustomWelcomeScreenIndicator</item>
        <item name="welcomeTitleTextStyle">@style/CustomWelcomeScreenTitle</item>
    </style>

    <style name="CustomWelcomeScreenIndicator" parent="WelcomeScreenPageIndicator">
        <item name="animated">true</item>
    </style>

    <style name="CustomWelcomeScreenTitle" parent="WelcomeScreenText.Large.Title">
        <item name="android:textSize">30sp</item>
    </style>

</resources>
