<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomWelcomeScreenTheme" parent="WelcomeScreenTheme.Light">
        <item name="indicatorStyle">@style/CustomWelcomeScreenIndicator</item>
    </style>

    <style name="CustomWelcomeScreenIndicator" parent="WelcomeScreenPageIndicator.Light">
        <item name="animated">true</item>
    </style>

</resources>
